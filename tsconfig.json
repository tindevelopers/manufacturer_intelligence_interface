{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./apps/web/*"
      ],
      "@/components/*": [
        "./apps/web/components/*"
      ],
      "@/lib/*": [
        "./apps/web/lib/*"
      ],
      "@/hooks/*": [
        "./apps/web/hooks/*"
      ]
    }
  },
  "include": [
    "apps/web/next-env.d.ts",
    "apps/web/**/*.ts",
    "apps/web/**/*.tsx",
    "apps/web/.next/types/**/*.ts",
    "apps/web/.build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "apps/web/node_modules"
  ]
}
